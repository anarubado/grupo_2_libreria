<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', {title: 'Inicio'}) %>
<body>
    <%- include('partials/header', {bgColor: "bg-dark", navbarColor: "navbar-dark"}) %>
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title"><i>Estás creando un producto</i></h2>
            </div>
        </div>

    <div class="col-12">
        <!--pasar el id del producto a la ruta que viaja por post-->
        <form action="/products/create" method="POST">
            <div class="row product-detail">

                <div class="col-12 col-md-6">
                    <label for="name" class="form-label">Nombre del producto:</label>
                    <input type="text" id="title" name="title" placeholder="Ej:Harry Potter y la piedra filosofal" class="form-input">
                </div>

                <small class="error">
                    <% if (typeof errors != 'undefined') { %>
                      <% if (errors.title) { %>
                        <%= errors.title.msg %> 
                      <% } %>
                   <% }%>
                  </small>

                <div class="col-12 col-md-6">
                    <label for="autor" class="form-label">Autor:</label>
                    <input type="text" id="author" name= "author" placeholder="J.K. Rowling" class="form-input">
                </div>
                <div class="col-12 col-md-6">
                    <label for="price" class="form-label">Precio del producto:</label>
                    <input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input">
                </div>
                <div class="col-12 col-md-6">
                    <label for="category" class="form-label">Categoría:</label>
                    <input type="text" id="category" name="category" placeholder="Ej: Literatura" class="form-input">
                </div>

                <div class="col-12 col-md-6">
                    <label for="Subcategory" class="form-label">Subcategoría:</label>
                    <input type="text" id="subCategory" name="subCategory" placeholder="Ej: Fantástica" class="form-input">
                </div>
    
                <div class="col-12 col-md-6">
                    <label for="price" class="form-label">Stock:</label>
                    <input type="text" id="stock" name="stock" placeholder="Ej: 10" class="form-input">
                </div>

                <div class="col-12 col-md-6">
                    <label for="price" class="form-label">ISBN:</label>
                    <input type="text" id="isbn" name="isbn" placeholder="Ej: 5678" class="form-input">
                </div>

                <div class="col-12 col-md-6">
                    <label for="price" class="form-label">Numero de paginas:</label>
                    <input type="text" id="paginas" name="pages" placeholder="Ej: 100" class="form-input">
                </div>

                <div class="col-12 col-md-6">
                    <label for="editorial" class="form-label">Editorial:</label>
                    <input type="text" id="editorial" name="editorial" placeholder="Ej: Salamanca" class="form-input">
                </div>

                <div class="col-12 col-md-6">
                    <label for="coverType" class="form-label">Tipo de tapa:</label>

                    <select name="coverType" id="coverType" class="form-input">
                        <% coverTypes.forEach(coverType => {%>
                           <option value="<%=coverType.id%>"><%=coverType.type%></option> 
                        <%});%>
                    </select>
                </div>

                <div class="col-12 col-md-6">
                    <label for="formatType" class="form-label">Formato:</label>

                    <select name="formatType" id="formatType" class="form-input">
                        <% formatTypes.forEach(formatType => {%>
                           <option value="<%=formatType.id%>"><%=formatType.type%></option> 
                        <%});%>
                    </select>
                </div>

                <div class="caja-edicion-foto">
                    <input class="input-edicion-foto" type="file" name="image" valu>
                </div>

            

                <div class="col-12">
                    <label for="description" class="form-label">Descripción:</label>
                    <textarea name="description" id="description" class="form-input"></textarea>
                </div>
                <div class="col-12">
                    <button type="submit" class="action-button edit">Crear producto</button>
                </div>
            </div>
        </form>
    </div>
</div>
<%- include ('partials/footer') %>
<%- include('partials/scripts-js') %>  
</body>