<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', {title: 'Cambiar contraseña'}) %>

<body>
    <%- include ('partials/header', {bgColor: "bg-dark", navbarColor: "navbar-dark"})  %>

    <div class='container'>

       <div class="formdiv">

        <form class="profile" action="/users/profile/editpassword/<%= user.id %>" method="POST">

         <h1 class="title">EDITA TU CONTRASEÑA</h1>

            <div>
                <label for="">
                   Contraseña actual
                </label> 
                <input class="form-control" type="password" name="currentPassword" value="<%= typeof old == "undefined" ? null : old.currentPassword %>">
    
                <small class="error">
                   <% if (typeof errors != 'undefined') { %>
                   <% if (errors.currentPassword) { %>
                      <%= errors.currentPassword.msg %> 
                   <% } %>
                <% }%>
                </small>
    
             </div>
    
             <div>
                <label for="">
                   Nueva contraseña
                </label>
                <input class="form-control" type="password" name= "newPassword" value="<%= typeof old == "undefined" ? null : old.newPassword %>">
    
                <small class="error">
                   <% if (typeof errors != 'undefined') { %>
                   <% if (errors.newPassword) { %>
                      <%= errors.newPassword.msg %> 
                   <% } %>
                <% }%>
                </small>
    
             </div>
    
                     
    
             <button type="submit" class="btn btn-info registrar">Enviar</button>
        

        </form>

    </div>

   </div>
        
    <%- include ('partials/footer')%>
    <%- include('partials/scripts-js')%> 
</body>
</html>