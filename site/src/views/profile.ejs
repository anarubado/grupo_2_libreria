<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Mi perfil'}) %>
<body>

  <%- include ('partials/header', {bgColor: "bg-dark", navbarColor: "navbar-dark"})  %>

   <div class="container">
      <div class='formdiv'>

      <form class="profile" action="/users/profile/<%=user.id%>" method="POST">

         <h1 class="title">EDITA TU PERFIL</h1>

         <!-- <img src="" alt=""> -->
         
         <div>
            <label for="">
               Usuario
            </label>
            <input class="form-control" type="name" name= "username" value="<%= typeof old == "undefined" ? user.username : old.username %>">

            <small class='error'>
               <% if (typeof errors != 'undefined') { %>
               <% if (errors.username) { %>
                  <%= errors.username.msg %>
               <% } %>
            <% }%>
            </small>

         </div>

         <div>
            <label for="">
               Mail
            </label>
            <input class="form-control" type="email" name= "email" value="<%= typeof old == "undefined" ? user.email : old.email %>">

            <small class="error">
               <% if (typeof errors != 'undefined') { %>
               <% if (errors.email) { %>
                  <%= errors.email.msg %> 
               <% } %>
            <% }%>
            </small>

         </div>

         <a href="/users/profile/password/<%= user.id %>">Cambiar contrasenia</a>

         <button type="submit" class="btn btn-info registrar">Enviar</button>
      </form> 

             
      
   </div>
</div>

   <%- include ('partials/footer')%>
   <%- include('partials/scripts-js')%> 
</body>
</html>